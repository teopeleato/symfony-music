{% extends 'base.html.twig' %}

{% block title %}Bands{% endblock %}

{% block body %}
    <div class="container">
    <h1>Bands</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Albums</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for band in bands %}
            <tr>
                <td>{{ band.id }}</td>
                <td>{{ band.name }}</td>
                <td>
                    {% for album in band.albums %}
                        <li>{{ album.name }}</li>
                    {% endfor %}
                    {# {{ band.albums }} #}
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('band_show', {'id': band.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('band_edit', {'id': band.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('band_new') }}">Create new</a>    
    <a class="btn btn-dark" href="{{ path('home') }}">Home</a>
    </div>

{% endblock %}
